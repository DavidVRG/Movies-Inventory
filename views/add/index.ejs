<form class="addMovie" action="/add" method="post" enctype="multipart/form-data">
    <h2>Add a new movie</h2>

    <label for="movieName">Movie Name:</label>
    <input type="text" name="movieName" id="movieName" maxlength="40">

    <label for="desc">Descript:</label>
    <input type="text" name="desc" id="desc" maxlength="200">

    <label for='file'>Select files</label>
    <input id='file' type="file" name="image">

    <button type="submit">Submit</button>
</form>